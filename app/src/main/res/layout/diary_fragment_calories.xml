<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiaryCaloriesFragment">

    <!-- header -->
    <TextView
        android:id="@+id/calFragHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7CEFE5"
        android:fontFamily="@font/alata"
        android:padding="2dp"
        android:text="@string/calories"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="403dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calFragHead"
        app:layout_constraintVertical_bias="0.05">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--top divider -->
            <View
                android:id="@+id/top_divider"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="14dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--carbohydrates -->
                <TextView
                    android:id="@+id/carb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CARBOHYDRATES"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="44dp"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/carbVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="44dp"
                    android:text=""
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- protein -->

                <TextView
                    android:id="@+id/protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROTEIN"
                    android:textSize="25sp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="40dp"/>

                <TextView
                    android:id="@+id/protVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="25sp"
                    android:layout_marginStart="167dp"
                    android:layout_marginTop="40dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--fat-->
                <TextView
                    android:id="@+id/fat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAT"
                    android:textSize="25sp"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="35dp"/>

                <TextView
                    android:id="@+id/fatVal"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="25sp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--fat-->
                <TextView
                    android:id="@+id/vitamin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VITAMIN"
                    android:textSize="25sp"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="35dp"/>

                <TextView
                    android:id="@+id/vitVal"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="25sp"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--fat-->
                <TextView
                    android:id="@+id/mineral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MINERAL"
                    android:textSize="25sp"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="35dp"/>

                <TextView
                    android:id="@+id/minVal"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="25sp"
                    android:layout_marginStart="165dp"
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--fat-->
                <TextView
                    android:id="@+id/dietaryFibre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DIETARY FIBRE"
                    android:textSize="25sp"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="35dp"/>

                <TextView
                    android:id="@+id/fibreVal"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="25sp"
                    android:layout_marginStart="97dp"
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"/>

            </LinearLayout>

            <!--bottom divider -->
            <View
                android:id="@+id/bottom_divider"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="36dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--total -->
                <TextView
                    android:id="@+id/totalView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="60dp"
                    android:text="@string/total"
                    android:textStyle="bold"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/totalVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:layout_marginStart="185dp"
                    android:layout_marginTop="30dp"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>